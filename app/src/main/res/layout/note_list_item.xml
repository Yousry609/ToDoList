<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="75dp">

        <View
            android:id="@+id/view_status"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:background="@color/purple_700" />


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="199dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="44dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Title"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_dueDate"
            android:layout_width="151dp"
            android:layout_height="19dp"
            android:layout_alignStart="@+id/cb_isDone"
            android:layout_alignParentTop="true"
            android:layout_marginStart="231dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@+id/view_status2"
            android:text="00/00/0000" />

        <TextView
            android:id="@+id/tv_category"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="46dp"
            android:drawablePadding="5dp"
            android:text="Category"
            android:textAlignment="viewStart"
            android:textColor="@color/purple_500"
            android:textStyle="italic" />

        <CheckBox
            android:id="@+id/cb_isDone"
            android:layout_width="30dp"
            android:layout_height="31dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@+id/view_status" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />

        <View
            android:id="@+id/view_status2"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:background="@color/purple_700" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="46dp"
            android:layout_toEndOf="@+id/tv_category"
            android:text="Deadline:"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
